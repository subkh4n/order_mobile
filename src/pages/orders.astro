---
import Layout from "../layouts/Layout.astro";
import OrdersPage from "../components/OrdersPage";
import BottomNav from "../components/BottomNav";
---

<Layout title="Pesanan Saya - Order Mobile">
  <main class="min-h-screen pb-28 bg-[var(--bg-primary)]">
    <!-- Content Container -->
    <div class="max-w-md mx-auto px-5 pt-[calc(var(--space-6)+var(--safe-area-top))]">
      <OrdersPage client:load />
    </div>
  </main>

  <!-- Bottom Navigation -->
  <BottomNav client:load currentPage="orders" />
</Layout>
