---
import Layout from '../layouts/Layout.astro';
import OrdersPage from '../components/OrdersPage';
import BottomNav from '../components/BottomNav';
---

<Layout title="Pesanan Saya - Order Mobile">
  <main class="min-h-screen pb-20">
    <!-- Header -->
    <header class="sticky top-0 z-10 bg-[var(--bg-primary)] border-b border-[var(--border-light)] safe-area-top">
      <div class="px-4 py-4">
        <h1 class="text-xl font-bold text-[var(--text-primary)]">Pesanan Saya</h1>
        <p class="text-sm text-[var(--text-muted)]">Riwayat dan status pesanan</p>
      </div>
    </header>

    <!-- Orders Content -->
    <OrdersPage client:load />
  </main>

  <!-- Bottom Navigation -->
  <BottomNav client:load currentPage="orders" />
</Layout>
