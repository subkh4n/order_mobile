---
import Layout from "../layouts/Layout.astro";
import CartPage from "../components/CartPage";
import BottomNav from "../components/BottomNav";
---

<Layout title="Keranjang - Order Mobile">
  <main class="min-h-screen pb-28 bg-[var(--bg-primary)]">
    <!-- Content Container -->
    <div class="max-w-md mx-auto px-5 pt-[calc(var(--space-6)+var(--safe-area-top))]">
      <CartPage client:load />
    </div>
  </main>

  <!-- Bottom Navigation -->
  <BottomNav client:load currentPage="cart" />
</Layout>
